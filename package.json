{
  "name": "mathstudio",
  "private": true,
  "version": "1.0.0",
  "description": "MathStudio - Interactive Math Learning App",
  "author": "MathStudio Team",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "gen-types": "npx supabase gen types typescript --project-id rnzpazlgjxdoyakuiixq --schema public > src/lib/database.types.ts",
    "preview": "vite preview",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --max-warnings 0",
      "bash -c 'tsc --noEmit'"
    ]
  },
  "dependencies": {
    "@sentry/react": "^10.39.0",
    "@supabase/supabase-js": "^2.96.0",
    "canvas-confetti": "^1.9.4",
    "framer-motion": "^12.29.3",
    "lucide-react": "^0.300.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^3.7.0",
    "tldraw": "^2.0.0-alpha.19",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@sentry/vite-plugin": "^4.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/canvas-confetti": "^1.9.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.5.0",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.32",
    "supabase": "^2.76.11",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18"
  }
}
